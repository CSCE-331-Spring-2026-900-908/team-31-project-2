<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.team31project2.ReportsController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="Navigate">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleNavigateOrdering" text="Orders" />
                                <MenuItem mnemonicParsing="false" onAction="#handleNavigateMenuEdit" text="Menu" />
                                <MenuItem mnemonicParsing="false" onAction="#handleNavigateEmployees" text="Employees" />
                                <MenuItem mnemonicParsing="false" onAction="#handleNavigateInventory" text="Inventory" />
                                <MenuItem mnemonicParsing="false" onAction="#handleNavigateReports" text="Reports" />
                                <SeparatorMenuItem />
                                <MenuItem mnemonicParsing="false" onAction="#handleSignOut" text="Sign Out" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0; -fx-padding: 15 20 15 20;">
                    <children>
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Manager Reports View" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <left>
        <VBox spacing="15.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 0 1 0 0; -fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Select a Report:" />
                <ListView fx:id="reportSelector" prefWidth="250.0" style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 5px;" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>
    <center>
        <VBox fx:id="contentArea" spacing="15.0" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 0 0 5 0;">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Date Range:" />
                        <Button fx:id="weekRangeButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="120.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: white; -fx-border-color: #bbbbbb; -fx-border-radius: 6px; -fx-background-radius: 6px;" text="1 Week" />
                        <Button fx:id="monthRangeButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="120.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: white; -fx-border-color: #bbbbbb; -fx-border-radius: 6px; -fx-background-radius: 6px;" text="1 Month" />
                        <Button fx:id="yearRangeButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="120.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: white; -fx-border-color: #bbbbbb; -fx-border-radius: 6px; -fx-background-radius: 6px;" text="1 Year" />
                    </children>
                </HBox>
                <Label fx:id="reportTitle" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="No Report Selected" />
                <VBox fx:id="chartContainer" prefHeight="300.0" />
                <TableView fx:id="reportTable" style="-fx-background-color: white; -fx-border-color: #e0e0e0;" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </center>
</BorderPane>
