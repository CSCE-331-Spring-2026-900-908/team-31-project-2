<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0"
            style="-fx-background-color: #f0f0f0;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.team31project2.MenuEditController">

    <top>
        <VBox>
            <!-- navbar -->
            <MenuBar>
                <menus>
                    <Menu mnemonicParsing="false" text="Navigate">
                        <items>
                            <MenuItem mnemonicParsing="false" text="Ordering View"
                                      onAction="#handleNavigateOrdering"/>
                            <MenuItem mnemonicParsing="false" text="Employee List"
                                      onAction="#handleNavigateEmployees"/>
                            <MenuItem mnemonicParsing="false" text="Inventory"
                                      onAction="#handleNavigateInventory"/>
                            <MenuItem mnemonicParsing="false" text="Order Trends"
                                      onAction="#handleNavigateTrends"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>

            <!-- header -->
            <HBox alignment="CENTER_LEFT"
                  prefHeight="60.0"
                  style="-fx-background-color: white;
                         -fx-border-color: #e0e0e0;
                         -fx-border-width: 0 0 1 0;">
                <padding>
                    <Insets left="24.0" right="24.0"/>
                </padding>
                <Label text="Manager Only"
                       style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="signOutButton" text="Sign out"
                        onAction="#handleSignOut"
                        style="-fx-background-color: transparent;
                               -fx-border-color: #333333;
                               -fx-border-radius: 20;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20 8 20;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER">
            <padding>
                <Insets top="30.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <VBox prefWidth="820.0"
                  style="-fx-background-color: white;
                         -fx-border-color: #d0d0d0;
                         -fx-border-radius: 12;
                         -fx-background-radius: 12;">
                <padding>
                    <Insets top="20.0" right="24.0" bottom="20.0" left="24.0"/>
                </padding>

                <!-- title + search + add -->
                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <padding>
                        <Insets bottom="16.0"/>
                    </padding>
                    <Label text="Menu Items"
                           style="-fx-font-weight: bold; -fx-font-size: 18;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="searchField"
                               promptText="Search"
                               prefWidth="200.0"
                               style="-fx-background-radius: 20;
                                      -fx-border-radius: 20;
                                      -fx-border-color: #cccccc;
                                      -fx-padding: 6 15 6 15;"/>
                    <Button fx:id="addButton" text="+"
                            style="-fx-background-color: transparent;
                                   -fx-border-color: #333333;
                                   -fx-border-radius: 20;
                                   -fx-background-radius: 20;
                                   -fx-font-size: 18;
                                   -fx-padding: 2 13 2 13;"/>
                </HBox>

                <!-- Column header row -->
                <HBox style="-fx-border-color: transparent transparent #e0e0e0 transparent;
                             -fx-border-width: 0 0 1 0;
                             -fx-padding: 0 0 8 0;">
                    <Label text="Name" prefWidth="420.0"
                           style="-fx-font-size: 13; -fx-text-fill: #888888;"/>
                    <Label text="Category" prefWidth="220.0"
                           style="-fx-font-size: 13; -fx-text-fill: #888888;"/>
                    <Label text="Action"
                           style="-fx-font-size: 13; -fx-text-fill: #888888;"/>
                </HBox>

                <ScrollPane hbarPolicy="NEVER"
                            prefHeight="520.0"
                            fitToWidth="true"
                            style="-fx-border-color: transparent;
                                   -fx-background-color: transparent;
                                   -fx-background: transparent;">
                    <content>
                        <VBox fx:id="menuItemsList"/>
                    </content>
                </ScrollPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>
