<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.team31project2.InventoryViewController">
	<top>
		<MenuBar fx:id="menuBar">
			<menus>
				<Menu mnemonicParsing="false" text="Navigate">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#handleNavigateOrdering" text="Orders" />
						<MenuItem mnemonicParsing="false" onAction="#handleNavigateMenuEdit" text="Menu" />
						<MenuItem mnemonicParsing="false" onAction="#handleNavigateEmployees" text="Employees" />
						<MenuItem mnemonicParsing="false" onAction="#handleNavigateInventory" text="Inventory" />
						<MenuItem mnemonicParsing="false" onAction="#handleNavigateTrends" text="Reports" />
						<SeparatorMenuItem />
						<MenuItem mnemonicParsing="false" onAction="#handleSignOut" text="Sign Out" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<fx:include source="inventory-management.fxml" />
	</center>
</BorderPane>
